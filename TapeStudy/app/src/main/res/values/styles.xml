<resources>

    <!-- default -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_gray_dark_2</item> <!-- action bar -->
        <item name="colorPrimaryDark">@color/color_gray_dark_1</item> <!-- status bar -->
        <item name="android:textColorPrimary">@color/color_gray_dark_1</item> <!-- text color -->
        <item name="colorAccent">@color/color_gray_light_4</item> <!-- check, radio, edittext underline ... -->
        <item name="android:textViewStyle">@style/DefaultTextViewStyle</item>
        <item name="editTextStyle">@style/DefaultEditTextStyle</item>
        <item name="buttonStyle">@style/DefaultButtonStyle</item>
        <item name="materialButtonStyle">@style/DefaultButtonStyle</item>
        <item name="imageButtonStyle">@style/DefaultImageButtonStyle</item>
        <item name="recyclerViewStyle">@style/DefaultRecyclerViewStyle</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <!-- 배경이 투명색인 activity -->
    <style name="TransparentStyle" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DefaultTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/color_gray_dark_1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DefaultEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/color_gray_dark_1</item>
        <item name="android:textColorHint">@color/color_gray_light_4</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DefaultButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/color_gray_dark_1</item>
    </style>

    <style name="DefaultImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/color_gray_dark_1</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="DefaultRecyclerViewStyle">
        <item name="android:background">#00000000</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="RoundHorizontalProgress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_round</item>
        <item name="android:indeterminate">false</item>
    </style>

    <style name="LineHorizontalProgress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_line_pink</item>
        <item name="android:indeterminate">false</item>
    </style>


    <!-- splash -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


    <!-- Notification -->
    <style name="NotificationTextStyle" parent="TextAppearance.Compat.Notification">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <!-- Dialog -->
    <style name="BottomSlideDialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/HorizontalSlideAnimation</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="DialogNoTransition">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    <style name="DialogNoTransitionCloseOutsize">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="HorizontalSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <!-- Text -->
    <style name="InfoTextStyle" parent="DefaultTextViewStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textColor">@color/color_yellow_1</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>
    <style name="CommonCenterTextStyle" parent="DefaultTextViewStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SingleLineTextStyle" parent="DefaultTextViewStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SettingEditTextStyle" parent="DefaultEditTextStyle">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textColorHint">@color/color_gray_light_2</item>
    </style>


    <!-- Button -->
    <style name="CommonBottomButtonStyle" parent="DefaultButtonStyle">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <!--RadioButton-->


    <!--CheckBox-->


    <!-- Chip -->
    <style name="CommonChipList" parent="Widget.MaterialComponents.ChipGroup">
        <item name="singleSelection">true</item>
        <item name="singleLine">false</item>
        <item name="chipSpacingHorizontal">8dp</item>
        <item name="chipSpacingVertical">8dp</item>
        <item name="selectionRequired">true</item>
    </style>

    <style name="CommonChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="android:radius">20dp</item>
        <item name="android:textAppearance">@style/chipTextAppearance</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <!-- Footer -->
    <style name="FooterActiveTextStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FooterInactiveTextStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- Test -->
    <style name="TestButtonStyle" parent="DefaultButtonStyle">
        <item name="android:layout_marginRight">5dp</item>
    </style>


</resources>
