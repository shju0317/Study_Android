<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/progress"
    android:fromDegrees="270"
    android:toDegrees="270"
    android:pivotX="50%"
    android:pivotY="50%">

    <shape
        android:shape="ring"
        android:innerRadiusRatio="2.16"
        android:thicknessRatio="26.67">

        <gradient
            android:startColor="@color/progress_start_1"
            android:endColor="@color/progress_end_1"
            android:type="sweep" />

    </shape>

</rotate>
